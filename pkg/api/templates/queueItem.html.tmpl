<!DOCTYPE html>
<html>
<head>
<title>Queue Item {{ .Id }}</title>
</head>
<body>
<h1>{{ with .Links.list }}<a href="{{.}}">Queue</a> > {{ end }}{{ .Id }}</h1>
{{ define "id" }}
<tr>
<td><b>ID</b></td>
<td>{{ .Id }}</td>
</tr>
{{ end }}
{{ define "metadata" }}
<tr>
<td><b>Metadata</b></td>
<td>
<ul>
<li>Submitted: {{ .Metadata.Submitted }}</li>
<li>Started: {{ .Metadata.Started }}</li>
<li>Ended: {{ .Metadata.Ended }}</li>
</ul>
</td>
</tr>
{{ end }}
{{ define "status" }}
   <tr>
   <td><b>Status</b></td>
   <td>
      <ul>
      {{ with .Execution }}
         <li>Execution ID: {{ .Id }}</li>
         <li>Status: {{ .Status }}</li>
         <li>StdOut: {{ .Stdout }}</li>
         <li>StdErr: {{ .Stderr }}</li>
      {{ end }}
      </ul>
   </td>
   </tr>
{{ end }}
<table>
{{ template "id" . }}
{{ template "metadata" . }}
<tr>
<td><b>Inputs</b></td>
<td>{{ range $i, $v := .Inputs }}{{ if gt $i 0 }}, {{ end }}{{ $v.Cid }}{{ end }}</td>
</tr>
<tr>
<td><b>Outputs</b></td>
<td>{{ range $i, $v := .Outputs }}{{ if gt $i 0 }}, {{ end }}{{ $v.Cid }}{{ end }}</td>
</tr>
</table>

<h2>DAGs</h2>
{{ define "dag" }}
   <li>
      <table>
         {{ template "id" . }}
         {{ template "metadata" . }}
         {{ template "status" . }}
         <tr>
         <td><b>Inputs</b></td>
         <td>
            <ul>
            {{ range .Inputs }}
               <li>{{ .Cid }}</li>
            {{ end }}
            </ul>
         </td>
         </tr>
         <tr>
         <td><b>Outputs</b></td>
         <td>
            <ul>
            {{ range .Outputs }}
               <li>{{ .Cid }}</li>
            {{ end }}
            </ul>
         </td>
         </tr>
      </table>
      {{ with .Children }}
         <ul>
            {{ range . }}
            {{ template "dag" . }}
            {{ end }}
         </ul>
      {{ end }}
   </li>
{{ end }}
{{ range .Children }}
   <ul>{{ template "dag" . }}</ul>
{{ end }}

<h2>Links</h2>
<ul>
{{ range $key, $value := .Links }}
   <li><a href="{{ $value }}">{{ $key }}</a></li>
{{ end }}
</ul>
</body>
</html>